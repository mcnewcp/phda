# Personal Health Data Assistant - Environment Variables Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
# PostgreSQL connection URL for the main database
POSTGRES_URL=postgresql://phda_user:phda_pass@localhost:5432/phda_db
# Database user credentials (used by Docker Compose)
POSTGRES_USER=phda_user
POSTGRES_PASSWORD=phda_pass
POSTGRES_DB=phda_db

# AI/ML APIs
# OpenAI API key for LangChain/LangGraph agents (get from platform.openai.com)
OPENAI_API_KEY=your_openai_api_key_here
# Bing Search API key for web search tool (get from Azure Portal)
BING_SEARCH_API_KEY=your_bing_search_api_key_here

# Observability
# Arize API key for Phoenix tracing (get from app.arize.com)
ARIZE_API_KEY=your_arize_api_key_here
# Phoenix collector URL for trace submission
PHOENIX_COLLECTOR_URL=https://app.arize.com/v1/traces

# Application Configuration
# Primary user ID for single-user setup (Phase 1)
USER_ID=mcnewcp
# Timezone for date/time operations
TIMEZONE=America/Chicago
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Service Ports
# Streamlit UI service port
UI_PORT=8501
# AI Data Logger service port  
AI_LOGGER_PORT=8000